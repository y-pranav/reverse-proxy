{
  "server": {
    "port": 8888,
    "max_connections": 50,
    "connection_timeout": 30,
    "keep_alive": true
  },
  "logging": {
    "file": "reverse_proxy_weighted.log",
    "level": "DEBUG",
    "console": true
  },
  "load_balancer": {
    "algorithm": "WEIGHTED_ROUND_ROBIN",
    "backends": [
      {
        "host": "127.0.0.1",
        "port": 3000,
        "weight": 3,
        "enabled": true
      },
      {
        "host": "127.0.0.1",
        "port": 8000,
        "weight": 1,
        "enabled": true
      },
      {
        "host": "127.0.0.1",
        "port": 8080,
        "weight": 2,
        "enabled": true
      }
    ]
  },
  "health_check": {
    "enabled": true,
    "interval": 30,
    "path": "/health",
    "timeout": 5
  }
}
